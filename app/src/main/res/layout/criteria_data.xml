<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:elevation="5dp" android:padding="@dimen/padding">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/criteriaField"
            android:layout_weight="1"/>
    <Button
            android:text="@string/go"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content" android:id="@+id/goBtn"
            style="@android:style/Widget.Material.Light.Button.Borderless"/>
</LinearLayout>